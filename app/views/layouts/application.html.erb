<!DOCTYPE html>
<html>
  <head>
    <title>Personal Dashboard</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag 'application', 'https://fonts.googleapis.com/css?family=Cabin+Condensed|Exo+2' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'application', 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.css' %>
    <%= stylesheet_link_tag 'application', 'https://cdnjs.cloudflare.com/ajax/libs/weather-icons/2.0.9/css/weather-icons.css' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="jumbotron">
      <div class="title_and_nav">
        <div class="title"><%= link_to "Personal Dash", root_path %></div>
        <div class="dropdown pull-right">
          <% if current_user %>
            <a class="dropdown-toggle" type="button" data-toggle="dropdown"><%= current_user.email %>
          <% end %>
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
            <li><%= link_to "Widgets", widgets_path %></li>
            <li><%= link_to "Dashboard", root_path %></li>
          </ul>
        </div>
      </div>
    </div>
    <%= yield %>
  </body>
</html>
