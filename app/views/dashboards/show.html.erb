<div class="container">
  <% @widgets.each do |widget| %>
    <% if standard_template(widget) %>
      <div class="col-md-3">
        <div class="panel panel-default icon-panel">
          <div class="panel-heading">
            <a  class="collapse-btn"><i class="glyphicon glyphicon-chevron-down"></i></a>
            <h2 class="panel-title pull-right"><%= widget.name %></h2>
          </div>
          <div class="panel-body">
            <%=raw template_for(widget) %>
          </div>
        </div>
      </div>
    <% end %>
    <%=raw template_for(widget, true) if map_template(widget) %>
  <% end %>
</div>
