<div class="jumbotron">
  <div class="title_and_nav">
    <div class="title">Personal Dash</div>
    <div class="dropdown pull-right">
      <a class="dropdown-toggle" type="button" data-toggle="dropdown"><%= @dashboard.user.email %>
      <span class="caret"></span></a>
      <ul class="dropdown-menu">
        <li><%= link_to "Log Out", destroy_user_session_path, method: :delete %></li>
      </ul>
    </div>
  </div>
</div>
<div class="container">
  

  <div class="row">
    <div class="col-md-3">
      <div class="panel panel-default icon-panel">
        <div class="panel-heading">
          <a  class="collapse-btn"><i class="glyphicon glyphicon-chevron-down"></i></a>
          <h2 class="panel-title pull-right"><%= @dashboard.user.home_city.capitalize %></h2>
        </div>
        <div id="time-container" class="panel-body">
          <div class="col-md-3"><div class="glyphicon glyphicon-time"></div></div>
          <div class="col-md-9" id="time"></div>
          <div class="col-md-3"><div class="weather-icon <%= @current_weather_icon %>"></div></div>
          <div class="col-md-9"><div id="temp" data-city=<%= @dashboard.user.home_city %>><%= @temp %>&deg;</div></div>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="panel panel-default icon-panel">
        <div class="panel-heading">
          <a  class="collapse-btn"><i class="glyphicon glyphicon-chevron-down"></i></a>
          <h2 class="panel-title pull-right">News</h2>
        </div>
        <div id="newsfeed" class="panel-body">
          <% @news_articles.each do |article| %>
            <div class='col-md-12'><a href=<%= article["url"] %>><%= article["title"] %></a></div>
          <% end %>
        </div>
      </div>
    </div>
    
    <div class="col-md-3">
      <div class="panel panel-default icon-panel">
        <div class="panel-heading">
          <a  class="collapse-btn"><i class="glyphicon glyphicon-chevron-down"></i></a>
          <h2 class="panel-title pull-right">How To</h2>
        </div>
        <div class="panel-body">
          <div class="col-md-3" id="how-to-thumb">
            <div class='col-md-12'><img src="<%= @how_to_data["thumbnail"] %>" height="75" width="75"/></div>
          </div>
          <div class="col-md-9" id="how-to">
            <div class='col-md-12'><a href="<%= @how_to_data["url"] %>"><%= @how_to_data["title"] %></a></div>
          </div>
        </div>
      </div>
    </div>

    <div class="col-md-3">
      <div class="panel panel-default icon-panel">
        <div class="panel-heading">
          <a  class="collapse-btn"><i class="glyphicon glyphicon-chevron-down"></i></a>
          <h2 class="panel-title pull-right">Quote of the Day</h2>
        </div>
        <div id="quote" class="panel-body">
          <div class='col-md-12'><%= @quote_data %></div>
        </div>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading">
          <a  class="collapse-btn"><i class="glyphicon glyphicon-chevron-down"></i></a>
          <h2 class="panel-title pull-right">Traffic</h2>
        </div>
        <div class="panel-body">
          <iframe
            width="100%"
            height="450"
            frameborder="0" style="border:0"
            src="https://www.google.com/maps/embed/v1/directions?key=AIzaSyDegZ6M6uR-zuwpyWGNZOiQ4k3qOs5_kJw
            &origin=<%= "#{@dashboard.user.home_address}+#{@dashboard.user.home_city}" %>&destination=<%= "#{@dashboard.user.work_address}+#{@dashboard.user.work_city}" %>" allowfullscreen>
          </iframe>
        </div>
      </div>
    </div>
  </div>
</div>  
